{
    "name": "@ts-boost/boost",
    "version": "0.0.0",
    "private": true,
    "description": "A statically-typed and library collection to assist development with TypeScript.",
    "keywords": [],
    "homepage": "https://github.com/ts-boost/boost",
    "bugs": "https://github.com/ts-boost/boost/issues",
    "repository": "https://github.com/ts-boost/boost",
    "license": "TS-Boost Software License",
    "author": "Frederik Krautwald <fkrautwald@gmail.com> (https://github.com/Frikki)",
    "contributors": [],
    "directories": {
        "doc": "./docs",
        "packages": "./packages"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "yarn clean && yarn prepare",
        "bump": "lerna version --exact",
        "clean": "rimraf packages/**/lib",
        "clean:dist": "lerna clean --yes && yarn clean",
        "lint": "tslint -p tsconfig.json",
        "lint:fix": "tslint -p tsconfig.json --fix",
        "prepare": "lerna run prepare",
        "release": "yarn bump && git push --follow-tags && scripts/release",
        "test": "lerna run test"
    },
    "dependencies": {},
    "devDependencies": {
        "@typed/test": "^9.0.0",
        "husky": "^1.3.1",
        "lerna": "^3.13.1",
        "lint-staged": "^8.1.5",
        "prettier": "^1.16.4",
        "tslint": "^5.13.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.3.3333"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts}": [
            "yarn lint:fix",
            "git add"
        ],
      "*": [
          "git add"
      ]
    }
}
