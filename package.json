{
    "name": "@tsboost/boost",
    "version": "0.0.0",
    "private": true,
    "description": "A statically-typed and library collection to assist development with TypeScript.",
    "keywords": [],
    "homepage": "https://github.com/ts-boost/boost",
    "bugs": "https://github.com/ts-boost/boost/issues",
    "repository": "https://github.com/ts-boost/boost",
    "license": "MIT",
    "author": "Frederik Krautwald <fkrautwald@gmail.com> (https://github.com/Frikki)",
    "contributors": [],
    "directories": {
        "doc": "./docs",
        "packages": "./packages"
    },
    "workspaces": ["packages/*"],
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "yarn clean && yarn prepare",
        "bump": "lerna version --exact",
        "clean": "rimraf packages/**/lib",
        "clean:dist": "lerna clean --yes && yarn clean",
        "lint": "lerna run lint",
        "lint:fix": "lerna run lint:fix",
        "prepare": "lerna run prepare",
        "release": "yarn bump && git push --follow-tags && lerna publish from-git",
        "test": "lerna run test"
    },
    "dependencies": {},
    "devDependencies": {
        "@typed/test": "9.3.0",
        "@typescript-eslint/eslint-plugin": "2.0.0",
        "@typescript-eslint/parser": "2.0.0",
        "eslint": "6.2.1",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "3.0.4",
        "lerna": "3.16.4",
        "lint-staged": "9.2.3",
        "prettier": "1.18.2",
        "typescript": "3.5.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts}": ["yarn lint:fix", "git add"],
        "*": ["git add"]
    }
}
