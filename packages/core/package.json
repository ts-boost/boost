  "main": "lib/index.js",
  "jsnext:main": "lib.es2015/index.js",
  "module": "lib.es2015/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ts-boost/boost.git"
  },
  "scripts": {
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "../../node_modules/.bin/prettier --write --print-width 100 --tab-width 2 --no-semi --single-quote --trailing-comma es5 --parser typescript src/*.ts src/**/*.ts src/**/**/*.ts",
    "test:unit": "../../node_modules/.bin/typed-test -r ts-node/register 'src/*/*.test.ts' 'src/**/*.test.ts'",
    "test:watch": "npm run test:unit -- --watch"
  }
}
